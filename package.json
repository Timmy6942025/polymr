{
  "name": "polymr",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Polymr - Automated Polymarket Market Making Bot",
  "scripts": {
    "dev": "bun run dev:api & bun run dev:web",
    "dev:web": "cd web && bun run dev",
    "dev:api": "cd api && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:web": "cd web && bun run build",
    "build:api": "echo 'API build skipped (Python)'",
    "build": "bun run build:web && bun run build:api",
    "start": "bun run start:api & bun run start:web",
    "start:web": "cd web && bun run start",
    "start:api": "cd api && uvicorn main:app --host 0.0.0.0 --port 8000",
    "init:db": "cd api && python3 scripts/init_db.py",
    "test": "cd web && bun run test",
    "lint": "cd web && bun run lint",
    "format": "cd web && bun run format"
  },
  "workspaces": [
    "web"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "polymarket",
    "prediction-market",
    "market-making",
    "trading-bot",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
